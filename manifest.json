{
    "manifest_version": 2,
    "name": "My Extension",
    "description": "My first browser extension.",
    "version": "1",
    "icons":
    {
        "16": "icon16.png"
    },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
    "matches": [
        "<all_urls>"
    ],
    "js": ["code.js"]
    }],
    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "alarms"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
